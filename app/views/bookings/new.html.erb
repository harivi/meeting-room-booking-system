<h1>Book a Meeting Room</h1>

<%= form_with model: @booking, local: true do |f| %>
  <div>
    <%= f.label :meeting_room_id, "Select Room",style:"font-size:25px; font-family:Times New Roman; color:black;  " %><br>
    <%= f.collection_select :meeting_room_id, @meeting_rooms, :id, :room_name, prompt: "Choose a room" %>
  </div>

  <div>
    <%= f.label :date, style:"font-size:25px; font-family:Times New Roman; color:black;  " %><br>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.label :start_time, style:"font-size:25px; font-family:Times New Roman; color:black;  " %><br>
    <%= f.time_field :start_time %>
  </div>

  <div>
    <%= f.label :end_time, style:"font-size:25px; font-family:Times New Roman; color:black;  " %><br>
    <%= f.time_field :end_time %>
  </div>

  <div>
    <%= f.submit "Book Room", style: "background-color: skyblue; color: black; border-radius: 15px; padding: 10px 20px; margin-top:10px; margin-bottom:10px;" %>
  </div>
<% end %>

<%= link_to "Back to Bookings", bookings_path %>
